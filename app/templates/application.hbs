
<div class="container">
  {{#if showDialog}}
  {{#paper-dialog class="flex-77" escapeToClose=false focusOnOpen=false}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        <span class="flex-5"></span><h2>Select your symbol</h2>
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

    {{#paper-dialog-content }}
        <p>Do you want to be <b>X</b> or <b>O</b>?</p>
    {{/paper-dialog-content}}
    {{#paper-dialog-actions class="layout-row"}}
      {{#paper-button onClick=(action "selectSymbol" "X")}}X{{/paper-button}}
      {{#paper-button onClick=(action "selectSymbol" "O") }}O{{/paper-button}}
    {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}

  <h1 class="text-center">Tic Tac Toe</h1>
  <div class="board-container">
    <div class="row">
      <div class="box text-center" {{action 'markBox' playerOne 'one'}}>{{one}}</div>
      <div class="box text-center" {{action 'markBox' playerOne 'two'}}>{{two}}</div>
      <div class="box text-center" {{action 'markBox' playerOne 'three'}}>{{three}}</div>
    </div>
    <div class="row">
      <div class="box text-center" {{action 'markBox' playerOne 'four'}}>{{four}}</div>
      <div class="box text-center" {{action 'markBox' playerOne 'five'}}>{{five}}</div>
      <div class="box text-center" {{action 'markBox' playerOne 'six'}}>{{six}}</div>
    </div>
    <div class="row">
      <div class="box text-center" {{action 'markBox' playerOne 'seven'}}>{{seven}}</div>
      <div class="box text-center" {{action 'markBox' playerOne 'eight'}}>{{eight}}</div>
      <div class="box text-center" {{action 'markBox' playerOne 'nine'}}>{{nine}}</div>
    </div>
  </div>
  <br>
  <p class="text-center"><a href="https://github.com/tchan/ember-tic-tac-toe">View Source</a></p>
</div>
{{ember-load-remover}}
